if [[ -z $SKIP_ALUCARD ]]; then
	echo $TERM | grep 256 > /dev/null
	if [[ $? -eq 0 ]]; then
		if [[ "$COLUMNS" -ge 60 ]]; then
			QUOTES="$HOME/.bashrc.d/sotnquotes"
			IMAGE="$HOME/.bashrc.d/alucard.ansi"

			cat "${IMAGE}"
			echo

			if ! fortune "${QUOTES}"; then
				# Didn't work? Try rebuilding the dat
				strfile "${QUOTES}"
				echo
				fortune "${QUOTES}"
			fi
			echo
		fi
	fi
fi
# vim: ft=sh
